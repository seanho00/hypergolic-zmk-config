
#define HRM(NAME, LABEL, HOLD_TRIG) \
  NAME: hrm_##NAME { \
    compatible = "zmk,behavior-hold-tap"; \
    label = "LABEL Homerow Mods"; \
    #binding-cells = <2>; \
    bindings = <&kp>, <&kp>; \
    flavor = "tap-unless-interrupted"; \
    tapping-term-ms = <150>; \
    quick_tap_ms = <100>; \
    hold-trigger-key-positions = <HOLD_TRIG>; \
  }

HRM(lhm,  Left, 5  6  7  8  9 15 16 17 18 19 25 26 27 28 29 30 31 32 33);
HRM(rhm, Right, 0  1  2  3  4 10 11 12 23 24 20 21 22 23 24 30 31 32 33);

