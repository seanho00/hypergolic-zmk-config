compatible = "zmk,combos";

#define COMBO(LAYERS, KEYS, NAME, BINDINGS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
  }

