compatible = "zmk,combos";

#define COMBO(LAYERS, KEYS, NAME, BINDINGS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYS>; \
    layers = <LAYERS>; \
  }

